{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./build",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "baseUrl": "src"
  },
  "include": [
    "src/**/*"
  ]
}
